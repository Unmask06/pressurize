{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI Backend",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["pressurize.main:app", "--reload"],
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Vue Frontend (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173/products/pressurize/",
      "webRoot": "${workspaceFolder}/frontend/src"
    }
  ]
}
